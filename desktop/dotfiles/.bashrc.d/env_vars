#!/usr/bin/env bash
export PATH="$HOME/bin:$PATH"
export PATH="$PATH:$HOME/.lein"
export PATH="$PATH:$HOME/.cask/bin"
export PATH="$PATH:$HOME/code/elixir/bin"

export CODE_DIR="$HOME/code"
export CDPATH=".:$CODE_DIR:$HOME/telnyx:$HOME/tamingchaos:$HOME/5a:$HOME/xerpa"

export EDITOR="editor"

export MIMIPASS_HOME="$HOME/Dropbox/.secrets/mimipass"
export MIMIPASS_RECIPIENT="renanranelli@gmail.com"

export ERL_AFLAGS="-kernel shell_history enabled"

# This enables bash eternal history
export HISTFILESIZE=
export HISTSIZE=

export PS4='(${BASH_SOURCE}:${LINENO}): ${FUNCNAME[0]} - [${SHLVL},${BASH_SUBSHELL}, $?]
'
