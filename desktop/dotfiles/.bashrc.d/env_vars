#!/usr/bin/env bash

#
## Path
#
export CODE_DIR="$HOME/code"

export PATH="${PATH}:${CODE_DIR}/rerun/rerun"
export PATH="$HOME/.local/bin:$PATH"
export PATH="$HOME/bin:$PATH"

export CDPATH=".:$CODE_DIR:$HOME/podium"

#
## Tooling
#
export EDITOR="editor"

export ERL_AFLAGS="-kernel shell_history enabled"

export HISTFILESIZE= # This enables bash eternal history
export HISTSIZE= # This enables bash eternal history


#
## Bash debug prompt
export PS4='(${BASH_SOURCE}:${LINENO}): ${FUNCNAME[0]} - [${SHLVL},${BASH_SUBSHELL}, $?]
'
